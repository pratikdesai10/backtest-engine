//@version=5
strategy("RSI Reversal", overlay=true, initial_capital=100000, commission_type=strategy.commission.percent, commission_value=0.1, default_qty_type=strategy.percent_of_equity, default_qty_value=100)

length = input.int(14, 'RSI Length')
oversold = input.int(30, 'Oversold Level')
overbought = input.int(70, 'Overbought Level')

rsiVal = ta.rsi(close, length)

longEntry = ta.crossover(rsiVal, oversold)
longExit = ta.crossunder(rsiVal, overbought)

if longEntry
    strategy.entry('Long', strategy.long)
if longExit
    strategy.close('Long')
    strategy.entry('Short', strategy.short)
